<LinearLayout xmlns:ads="http://schemas.android.com/apk/res-auto"
              xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:card_view="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/backColor"
              android:fitsSystemWindows="true"
              android:orientation="vertical">

    <include layout="@layout/toolbar"/>

    <android.support.v7.widget.CardView
        android:id="@+id/recents_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:padding="8dp"
        card_view:cardBackgroundColor="@android:color/white"
        card_view:cardCornerRadius="8dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="8dp">

            <TextView
                android:id="@+id/loggedin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="You are logged in as"
                android:textColor="@color/accentColor"
                android:textSize="10sp"
                android:textStyle="italic"
                />

            <TextView
                android:id="@+id/auser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/loggedin"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/yourposts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/auser"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:text="YOUR POSTS"
                android:textColor="@color/accentColor"
                android:textSize="10sp"/>

            <TextView
                android:id="@+id/none"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="NONE"
                android:textSize="10sp"
                android:textStyle="italic"/>

            <ListView
                android:id="@+id/abooks"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/blogout"
                android:layout_below="@+id/yourposts"
                android:layout_marginTop="8dp"
                android:divider="@color/dividerColor"
                android:dividerHeight="1dp"
                android:visibility="gone"
                />

            <ProgressBar
                android:id="@+id/aprogress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                />


            <at.markushi.ui.CircleButton
                android:id="@+id/blogout"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8dp"
                android:src="@drawable/logout"
                app:cb_color="@color/accentColor"
                app:cb_pressedRingWidth="8dp"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <!--<com.google.android.gms.ads.AdView-->
